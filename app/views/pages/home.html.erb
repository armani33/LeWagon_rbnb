<div class="home-container">
  <div class="sign-in_button">
    <%= link_to("Sign up", new_user_registration_path) %>
  </div>
  <div class="log-in">
    <%= link_to("Log in", new_user_session_path) %>
  </div>
  <div class="flex_search_form">
    <h1>Book unique homes and experiences.</h1>
    <%= form_tag search_path, method: "get" do %>
      <%= label_tag(:q, "WHERE") %>
      <%= text_field_tag(:q, "Anywhere") %>
      <div class="date_search_form">
        <%= label_tag(:q, "CHECK IN:") %>
        <%= date_field(:booking, :start_date) %>
        <%= label_tag(:q, "CHECK OUT:") %>
        <%= date_field(:booking, :end_date) %>
        <%= submit_tag("Search") %>
      </div>
      <%= label_tag(:q, "GUESTS") %>
      <%= number_field(:flat, :guest_capacity, in: 1..20, step: 1) %>
    <% end %>
  </div>
</div>
