<div class= "profil-contrainer">
  <div class="row">
    <div class="col-lg-3 col-md-4 hide-sm ">
      <img src="<%= @user.avatar %>" class="avatar-large" alt="Avatar" />
    </div>
    <div class="col-lg-9 col-md-8 col-sm-12">
      <h2> Hello, my name is <%=@user.first_name%>!</h2>
      <p><strong>Member since <%= @user.created_at %></strong></p>
      <%= link_to 'Update profile', edit_user_registration_path(@user) %>
  </div>
  </div>
  <div class="row">
    <div class="col-lg-3 col-md-4 hide-sm ">
      <h3>User informations: </h3>
    <p><strong>First name:</strong> <%=@user.first_name%></p>
    <p><strong>Last name:</strong> <%=@user.last_name%></p>
    <p><strong>Email:</strong> <%=@user.email%></p>
  </div>
  <div class="row">
    <div class="col-lg-3 col-md-4 hide-sm">
      <%= link_to "View bookings", user_bookings_path(@user) %>
      <br>
      <%= link_to "Want to rent your place? Add a flat!", new_flat_path(@user) %>
      <br>
      <%= link_to "Manage your flats", flats_user_index_path%>
    </div>
  </div>
  </div>



</div>



