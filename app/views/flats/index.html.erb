<div class="container-search-form">
  <div class="row">
   <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 ">
  <div class="search-form text-align-left">
      <%= form_tag search_path, method: "get", :class => 'comment_form' do %>
        <br>
        <h3>Want to rent a place? Bookin now!</h3>
        <br>
        <p><%= label_tag(:city, "WHERE:") %>
        <%= text_field_tag(:city, "Anywhere")%></p>
        <div class="date_search_form">
          <p><%= label_tag(:q, "CHECK IN:") %></h4>
          <%= date_field(:booking, :start_date) %></p>
          <p><%= label_tag(:q, "CHECK OUT:") %>
          <%= date_field(:booking, :end_date) %></p>
        </div>
        <p><%= label_tag(:q, "GUESTS") %>
        <%= number_field(:flat, :guest_capacity, in: 1..20, step: 1) %></p>
        <p><%= submit_tag("Search") %></p>
      <% end %>
    </div>
    </div>
    </div>
    </div>
    <div class="container-card_index"></div>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-xs-12 col-sm-6 col-md-3 ">
      <%= link_to flat_path(flat) do %>
      <div class="card-index">
        <div class="body-card">
          <%# image_tag(flat.pictures.first, :alt => "flat picture") %>
        </div>
        <div class="footer-card">
          <h1><%= flat.description %></h1>
          <p><%= flat.price %></p>
          <ul>
            <li>average of the ratings : <%= flat.average_rating %></li>
            <li><%= flat.number_of_review %> Reviews</li>
          </ul>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

