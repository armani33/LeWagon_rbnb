<div class="container-fluid">
  <div class="search-form">
      <%= form_tag search_path, method: "get", :class => 'comment_form' do %>
        <%= label_tag(:city, "WHERE") %>
        <%= text_field_tag(:city, "Anywhere") %>
        <div class="date_search_form">
          <%= label_tag(:q, "CHECK IN:") %>
          <%= date_field(:booking, :start_date) %>
          <%= label_tag(:q, "CHECK OUT:") %>
          <%= date_field(:booking, :end_date) %>
        </div>
        <%= label_tag(:q, "GUESTS") %>
        <%= number_field(:flat, :guest_capacity, in: 1..20, step: 1) %>
        <%= submit_tag("Search") %>
      <% end %>
    </div>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-xs-12 col-sm-6 col-md-3 ">
      <%= link_to flat_path(flat) do %>
      <div class="card">
        <div class="body-card">
          <%# image_tag(flat.pictures.first, :alt => "flat picture") %>
        </div>
        <div class="footer-card">
          <h1><%= flat.description %></h1>
          <p><%= flat.price %></p>
          <ul>
            <li>average of the ratings : <%= flat.average_rating %></li>
            <li><%= flat.number_of_review %> Reviews</li>
          </ul>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
