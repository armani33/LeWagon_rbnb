<h2>List of your properties !! </h2>
  <div class="container-fluid">
    <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-xs-12 col-sm-6 col-md-3 ">
      <%= link_to flat_path(flat) do %>
      <div class="card">
        <div class="body-card">
          <%= cl_image_tag flat.photo, height: 300, width: 400, crop: :fill %>
        </div>
        <div class="footer-card">
          <h1><%= flat.description %></h1>
          <p><%= flat.price %>$</p>
          <p><%= link_to "View and Approve Bookings", owner_flat_bookings_path(current_user, flat) %></p>
          <ul>
            <li>average of the ratings : <%= flat.average_rating %></li>
            <li><%= flat.number_of_review %> Reviews</li>
          </ul>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  </div>
